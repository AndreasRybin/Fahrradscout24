<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_fulladv_image"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_fulladv_verkäufer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Verkäufer: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_fulladv_image" />



    <TextView
        android:id="@+id/tv_fulladv_erstelldatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Erstelldatum:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_verkäufer" />

    <TextView
        android:id="@+id/tv_fulladv_ablaufdatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Ablaufdatum:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_erstelldatum" />

    <TextView
        android:id="@+id/tv_fulladv_preis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Preis:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_ablaufdatum" />

    <EditText
        android:id="@+id/edit_fulladv_preis"
        android:layout_width="172dp"
        android:layout_height="38dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:hint="Preis"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text=""
        android:textColorLink="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/tv_fulladv_preis"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_show_ablaufdatum" />

    <Button
        android:id="@+id/btn_fulladv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:elevation="0dp"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_preis"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_fulladv_discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:text="Discard"
        app:layout_constraintStart_toEndOf="@+id/btn_fulladv_delete"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_preis" />

    <Button
        android:id="@+id/btn_fulladv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:text="Save"
        app:layout_constraintStart_toEndOf="@+id/btn_fulladv_discard"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_preis" />

    <TextView
        android:id="@+id/tv_fulladv_show_verkäufer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_fulladv_verkäufer"
        app:layout_constraintTop_toBottomOf="@+id/iv_fulladv_image" />

    <TextView
        android:id="@+id/tv_fulladv_show_erstelldatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_fulladv_erstelldatum"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_show_verkäufer" />

    <TextView
        android:id="@+id/tv_fulladv_show_ablaufdatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_fulladv_ablaufdatum"
        app:layout_constraintTop_toBottomOf="@+id/tv_fulladv_show_erstelldatum" />

</android.support.constraint.ConstraintLayout>